<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:iTimeTableDtOs="clr-namespace:Bgb_DataAccessLibrary.Contracts.IModels.IDTOs.ITimeTableDTOs;assembly=Bgb_DataAccessLibrary">

    <!-- TextBlock Style for Cells -->
    <Style x:Key="DataGridTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Style for DataGrid Cells with IsValid Binding -->
    <Style x:Key="ValidationDependentCellStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.IsValid), RelativeSource={RelativeSource Self}}" Value="True">
                <Setter Property="Foreground" Value="White" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.IsValid), RelativeSource={RelativeSource Self}}" Value="False">
                <Setter Property="Foreground" Value="Red" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="AlternateTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Background" Value="#46d0ff" />
        <Setter Property="Foreground" Value="Blue" />
    </Style>

    <Style x:Key="AlternateTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Yellow" />
        <Setter Property="Foreground" Value="Black" />
    </Style>


    <Style x:Key="DataGridEditableTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="HorizontalAlignment" Value="Center">
        </Setter>
        <Setter Property="VerticalAlignment" Value="Center" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.IsValid), RelativeSource={RelativeSource Self}}" Value="True">
                <Setter Property="Foreground" Value="Green" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.IsValid), RelativeSource={RelativeSource Self}}" Value="False">
                <Setter Property="Foreground" Value="Red" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="LevelDependentTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Background" Value="Transparent" />

        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="A1">
                <Setter Property="Background" Value="LightCoral" />
                <Setter Property="Foreground" Value="Maroon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="A2">
                <Setter Property="Background" Value="LightGreen" />
                <Setter Property="Foreground" Value="DarkGreen" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="B1">
                <Setter Property="Background" Value="LightBlue" />
                <Setter Property="Foreground" Value="DarkBlue" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="B2">
                <Setter Property="Background" Value="LightYellow" />
                <Setter Property="Foreground" Value="Orange" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="C1">
                <Setter Property="Background" Value="LightPink" />
                <Setter Property="Foreground" Value="DarkRed" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="C2">
                <Setter Property="Background" Value="Plum" />
                <Setter Property="Foreground" Value="Purple" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="Gespräch">
                <Setter Property="Background" Value="LightGray" />
                <Setter Property="Foreground" Value="Gray" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="Prüfungstraining A1">
                <Setter Property="Background" Value="LightCoral" />
                <Setter Property="Foreground" Value="Maroon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="Prüfungstraining A2">
                <Setter Property="Background" Value="LightGreen" />
                <Setter Property="Foreground" Value="DarkGreen" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="Prüfungstraining B1">
                <Setter Property="Background" Value="LightBlue" />
                <Setter Property="Foreground" Value="DarkBlue" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="Prüfungstraining B2">
                <Setter Property="Background" Value="LightYellow" />
                <Setter Property="Foreground" Value="Orange" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="Prüfungstraining C1">
                <Setter Property="Background" Value="LightPink" />
                <Setter Property="Foreground" Value="DarkRed" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="Prüfungstraining C2">
                <Setter Property="Background" Value="Plum" />
                <Setter Property="Foreground" Value="Purple" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Tag.(iTimeTableDtOs:ISlotEntry.Level), RelativeSource={RelativeSource Self}}" Value="Prüfungstraining DaF">
                <Setter Property="Background" Value="LightGray" />
                <Setter Property="Foreground" Value="Black" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
